# Environment Variables Template
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to git!

# X (Twitter) API Configuration
# Get these from: https://developer.x.com/en/portal/dashboard
# NOTE: These are SERVER-SIDE ONLY (no NEXT_PUBLIC_ prefix) for security
X_API_KEY=your_x_api_key_here
X_API_SECRET=your_x_api_secret_here
X_BEARER_TOKEN=your_x_bearer_token_here
X_CLIENT_ID=your_x_client_id_here
X_CLIENT_SECRET=your_x_client_secret_here

# API Base URLs (change per environment)
NEXT_PUBLIC_API_BASE_URL=http://localhost:3000/api

# Analytics (optional)
NEXT_PUBLIC_ANALYTICS_ID=your_analytics_id_here

# Feature Flags (optional)
NEXT_PUBLIC_ENABLE_DEBUG_MODE=false

# Space-Track.org API Configuration
# Register at: https://www.space-track.org/auth/createAccount
# NOTE: These are SERVER-SIDE ONLY (no NEXT_PUBLIC_ prefix) for security
SPACE_TRACK_USERNAME=your_space_track_username_here
SPACE_TRACK_PASSWORD=your_space_track_password_here

# Finnhub API Configuration
# Register at: https://finnhub.io/register
# Free tier: 60 API calls/minute, real-time stock quotes
# NOTE: SERVER-SIDE ONLY (no NEXT_PUBLIC_ prefix) for security
FINNHUB_API_KEY=your_finnhub_api_key_here

# Alpha Vantage API Configuration
# Register at: https://www.alphavantage.co/support/#api-key
# Free tier: 25 API calls/day, full historical data + technical indicators
# NOTE: SERVER-SIDE ONLY (no NEXT_PUBLIC_ prefix) for security
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# Waitlist Notifications
# Discord webhook URL (optional) - for instant notifications
# Create at: Discord Server Settings > Integrations > Webhooks
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here

# Resend API for email notifications (optional)
# Register at: https://resend.com
RESEND_API_KEY=your_resend_api_key_here
NOTIFICATION_EMAIL=your_email@example.com

# Admin secret key for protected endpoints
ADMIN_SECRET_KEY=your_secure_random_string_here

# Patreon Integration (for Full Spectrum tier)
# Create app at: https://www.patreon.com/portal/registration/register-clients
PATREON_CLIENT_ID=your_patreon_client_id_here
PATREON_CLIENT_SECRET=your_patreon_client_secret_here
PATREON_WEBHOOK_SECRET=your_patreon_webhook_secret_here
PATREON_CAMPAIGN_ID=your_patreon_campaign_id_here

# Discord invite link for Full Spectrum members (optional)
NEXT_PUBLIC_DISCORD_INVITE_URL=https://discord.gg/your-invite-code

# Add more variables as needed for other APIs
